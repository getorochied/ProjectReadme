{% extends 'base.html.twig' %}

{% block title %}{{ portfolio.description }} - README MiNET{% endblock %}

{% block body %}
<!-- Portfolio Details Section-->
<section class="page-section portfolio" id="portfolio">
    <div class="container">
        <!-- Portfolio Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Portfolio #{{ portfolio.id }}</h2>
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-folder-open"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        
        <!-- Description -->
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="text-muted">{{ portfolio.description }}</h4>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Projects Heading -->
        <h3 class="text-center text-uppercase text-secondary mb-4">
            <i class="fas fa-project-diagram"></i> 
            Projets ({{ portfolio.projects|length }})
        </h3>
        
        <!-- Projects List -->
        {% if portfolio.projects|length > 0 %}
            <div class="row">
                {% for project in portfolio.projects %}
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">
                                    {{ project.title }}
                                    {% if project.status == 'completed' %}
                                        <span class="badge bg-success">Terminé</span>
                                    {% elseif project.status == 'in_progress' %}
                                        <span class="badge bg-warning text-dark">En cours</span>
                                    {% elseif project.status == 'on_hold' %}
                                        <span class="badge bg-secondary">En pause</span>
                                    {% else %}
                                        <span class="badge bg-danger">Pas commencé</span>
                                    {% endif %}
                                </h5>
                                
                                <p class="card-text text-muted">{{ project.description }}</p>
                                
                                <hr>
                                
                                <p class="mb-1">
                                    <i class="far fa-calendar"></i> 
                                    <strong>Début :</strong> 
                                    {{ project.startDate ? project.startDate|date('d/m/Y') : 'Non défini' }}
                                </p>
                                
                                {% if project.endDate %}
                                    <p class="mb-2">
                                        <i class="far fa-calendar-check"></i> 
                                        <strong>Fin :</strong> 
                                        {{ project.endDate|date('d/m/Y') }}
                                    </p>
                                {% endif %}
                                
                                <!-- Checklist des tâches -->
                                {% if project.tasks|length > 0 %}
                                    <hr>
                                    <h6><i class="fas fa-tasks"></i> Checklist ({{ project.tasks|length }})</h6>
                                    
                                    {% set tasksDone = 0 %}
                                    {% for task in project.tasks %}
                                        {% if task.status == 'done' %}
                                            {% set tasksDone = tasksDone + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    
                                    <div class="progress mb-2" style="height: 20px;">
                                        <div class="progress-bar bg-success" role="progressbar" 
                                             style="width: {{ (tasksDone / project.tasks|length * 100)|round }}%">
                                            {{ tasksDone }}/{{ project.tasks|length }}
                                        </div>
                                    </div>
                                    
                                    <ul class="list-unstyled mb-0">
                                        {% for task in project.tasks|sort((a, b) => a.orderPosition <=> b.orderPosition) %}
                                            <li class="mb-1">
                                                {% if task.status == 'done' %}
                                                    <i class="fas fa-check-circle text-success"></i>
                                                {% elseif task.status == 'in_progress' %}
                                                    <i class="fas fa-spinner text-warning"></i>
                                                {% else %}
                                                    <i class="far fa-circle text-muted"></i>
                                                {% endif %}
                                                <small>{{ task.title }}</small>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-info-circle"></i> Aucun projet dans ce portfolio pour le moment.
            </div>
        {% endif %}
        
        <!-- Back Button -->
        <div class="text-center mt-5">
            <a href="{{ path('app_portfolio_index') }}" class="btn btn-primary btn-xl">
                <i class="fas fa-arrow-left"></i> Retour aux portfolios
            </a>
        </div>
    </div>
</section>
{% endblock %}