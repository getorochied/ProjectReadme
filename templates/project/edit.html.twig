{% extends 'base.html.twig' %}

{% block title %}Modifier {{ project.title }}{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <h1 class="text-center mb-4">Modifier le projet</h1>
                <p class="text-center text-muted mb-4">{{ project.title }}</p>
                
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ include('project/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>
                </div>

                <div class="mt-3 d-flex justify-content-between">
                    <a href="{{ path('app_project_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                    {{ include('project/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
