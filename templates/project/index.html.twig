{% extends 'base.html.twig' %}

{% block title %}Liste des Projets{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <div class="text-center mb-5">
            <h1 class="text-uppercase mb-3">Projets</h1>
            <p class="lead">Tous les projets de l'organisation</p>
        </div>

        {% if projects|length > 0 %}
            <div class="row">
                {% for project in projects %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            {% if project.imageName %}
                                <img src="{{ vich_uploader_asset(project, 'imageFile') }}" 
                                     class="card-img-top" 
                                     alt="{{ project.title }}"
                                     style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-project-diagram fa-4x text-white opacity-50"></i>
                                </div>
                            {% endif %}
                            <div class="card-header bg-light">
                                <h5 class="card-title mb-0">{{ project.title }}</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">{{ project.description|length > 100 ? project.description|slice(0, 100) ~ '...' : project.description }}</p>
                                <p class="mb-2">
                                    <span class="badge 
                                        {% if project.status == 'not_started' %}bg-secondary
                                        {% elseif project.status == 'in_progress' %}bg-warning text-dark
                                        {% elseif project.status == 'completed' %}bg-success
                                        {% elseif project.status == 'on_hold' %}bg-info
                                        {% else %}bg-dark
                                        {% endif %}">
                                        {{ project.status|replace({'_': ' '})|title }}
                                    </span>
                                </p>
                                <div class="text-muted small">
                                    <p class="mb-1">
                                        <i class="fas fa-users me-1"></i>{{ project.members|length }} membre(s)
                                    </p>
                                    <p class="mb-0">
                                        <i class="fas fa-calendar me-1"></i>{{ project.startDate ? project.startDate|date('d/m/Y') : 'Non défini' }}
                                    </p>
                                </div>
                            </div>
                            <div class="card-footer bg-light">
                                <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>Voir
                                </a>
                                <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit me-1"></i>Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Aucun projet trouvé. Créez des projets depuis les portfolios !
            </div>
        {% endif %}
    </div>
{% endblock %}
