{% extends 'base.html.twig' %}

{% block title %}{{ project.title }}{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <div class="row mb-4">
            <div class="col">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h1 class="display-4">{{ project.title }}</h1>
                        <span class="badge {% if project.status == 'not_started' %}bg-secondary{% elseif project.status == 'in_progress' %}bg-warning text-dark{% elseif project.status == 'completed' %}bg-success{% elseif project.status == 'on_hold' %}bg-info{% else %}bg-dark{% endif %} fs-5">
                            {{ project.status|replace({'_': ' '})|title }}
                        </span>
                    </div>
                    
                    {# Bouton Favoris #}
                    {% set favoriteIds = app.request.session.get('favorites', []) %}
                    {% set isFavorite = project.id in favoriteIds %}
                    
                    <form method="post" action="{{ path('app_favorites_toggle', {'id': project.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle-favorite' ~ project.id) }}">
                        <button type="submit" 
                                class="btn {{ isFavorite ? 'btn-danger' : 'btn-outline-danger' }} btn-lg"
                                title="{{ isFavorite ? 'Retirer des favoris' : 'Ajouter aux favoris' }}">
                            <i class="fas fa-heart me-2"></i>
                            {{ isFavorite ? 'Retirer des favoris' : 'Ajouter aux favoris' }}
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Description</h5>
                <p class="card-text">{{ project.description }}</p>
                
                {% if project.imageName %}
                    <div class="mt-3">
                        <h6 class="mb-2">Image du projet</h6>
                        <img src="{{ vich_uploader_asset(project, 'imageFile') }}" 
                             alt="{{ project.title }}" 
                             class="img-fluid rounded shadow-sm" 
                             style="max-width: 600px; max-height: 400px; object-fit: cover;">
                    </div>
                {% endif %}
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <p class="mb-1"><strong>Portfolio :</strong> {{ project.portfolio.description }}</p>
                        <p class="mb-1"><strong>Date de début :</strong> {{ project.startDate ? project.startDate|date('d/m/Y') : 'Non défini' }}</p>
                        <p class="mb-0"><strong>Date de fin :</strong> {{ project.endDate ? project.endDate|date('d/m/Y') : 'Non défini' }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <p class="mb-1"><strong>Membres :</strong> {{ project.members|length }}</p>
                        <p class="mb-0"><strong>Tâches :</strong> {{ project.tasks|length }}</p>
                    </div>
                </div>
            </div>
        </div>

        {% if project.members|length > 0 %}
            <h2 class="mb-3">Membres du projet</h2>
            <div class="row mb-4">
                {% for member in project.members %}
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-user me-2"></i>{{ member.username }}
                                </h6>
                                <p class="card-text small text-muted mb-0">{{ member.email }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if project.tasks|length > 0 %}
            <h2 class="mb-3">Tâches</h2>
            <div class="list-group mb-4">
                {% for task in project.tasks|sort((a, b) => a.orderPosition <=> b.orderPosition) %}
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <h6 class="mb-1">
                                {% if task.status == 'done' %}
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                {% else %}
                                    <i class="far fa-circle text-secondary me-2"></i>
                                {% endif %}
                                {{ task.title }}
                            </h6>
                            <span class="badge {{ task.status == 'done' ? 'bg-success' : 'bg-secondary' }}">
                                {{ task.status == 'done' ? 'Terminée' : 'En cours' }}
                            </span>
                        </div>
                        {% if task.description %}
                            <p class="mb-0 text-muted small">{{ task.description }}</p>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="card mb-4 shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Ajouter à une showcase
                    </h5>
                </div>
                <div class="card-body">
                    {% set user_showcases = [] %}
                    {% for showcase in app.user.showcases %}
                        {% set user_showcases = user_showcases|merge([showcase]) %}
                    {% endfor %}

                    {% if user_showcases|length > 0 %}
                        <p class="mb-3">Sélectionnez une de vos showcases pour y ajouter ce projet :</p>
                        <div class="row">
                            {% for showcase in user_showcases %}
                                <div class="col-md-6 mb-3">
                                    <div class="card {{ project.showcases.contains(showcase) ? 'border-success' : '' }}">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title mb-1">
                                                        {{ showcase.title }}
                                                        {% if project.showcases.contains(showcase) %}
                                                            <i class="fas fa-check-circle text-success ms-2"></i>
                                                        {% endif %}
                                                    </h6>
                                                    <p class="card-text small text-muted mb-2">
                                                        {{ showcase.description|length > 60 ? showcase.description|slice(0, 60) ~ '...' : showcase.description }}
                                                    </p>
                                                    <span class="badge {{ showcase.isPublic ? 'bg-success' : 'bg-warning text-dark' }} me-1">
                                                        {{ showcase.isPublic ? 'Public' : 'Privé' }}
                                                    </span>
                                                    <span class="badge bg-secondary">
                                                        {{ showcase.projects|length }} projet{{ showcase.projects|length > 1 ? 's' : '' }}
                                                    </span>
                                                </div>
                                                <div class="ms-2">
                                                    {% if not project.showcases.contains(showcase) %}
                                                        <form method="post" action="{{ path('app_project_add_to_showcase', {
                                                            'projectId': project.id,
                                                            'showcaseId': showcase.id
                                                        }) }}" class="d-inline">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('add-to-showcase' ~ project.id) }}">
                                                            <button type="submit" class="btn btn-sm btn-primary" title="Ajouter à cette showcase">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </form>
                                                    {% else %}
                                                        <span class="badge bg-success">Déjà ajouté</span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Vous n'avez pas encore de showcase. 
                            <a href="{{ path('app_user_show', {'id': app.user.id}) }}" class="alert-link">
                                Créez-en une maintenant !
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        <div class="mt-4 mb-5">
            <a href="{{ path('app_project_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
            </a>
            <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Modifier
            </a>
        </div>
    </div>
{% endblock %}
