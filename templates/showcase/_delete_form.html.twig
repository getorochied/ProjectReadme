<form method="post" action="{{ path('app_showcase_delete', {'id': showcase.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette showcase ?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ showcase.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash me-2"></i>Supprimer
    </button>
</form>
